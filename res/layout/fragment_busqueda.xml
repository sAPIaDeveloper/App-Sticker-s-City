<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentbusqueda"
    android:orientation="vertical"
    tools:context=".Fragments.BusquedaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/conjunto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/busqueda_fragment_busqueda"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/palabra"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ejemplo_editText"
                    android:gravity="center"
                    android:textSize="18sp"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/boton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="35dp"
                android:text="@string/text_boton"
                android:gravity="center"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_search_white_24dp"
                android:background="@drawable/bk_boton_plano"/>

            <TextView
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/ultima"
                android:textStyle="bold"
                android:gravity="center"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ultimoDescargado"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->



</FrameLayout>